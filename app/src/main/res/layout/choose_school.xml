<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.huazi.campusexchange.ui.activitys.entrance.ChooseSchool">

    <Button
        android:id="@+id/bt"
        android:text="选择学校"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <LinearLayout
        android:id="@+id/school_show"
        android:orientation="vertical"
        android:layout_below="@+id/bt"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/school_name"
            android:layout_marginTop="30dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="选择您所在的学校以便于给您推荐在您附近的同学和物品"
            android:layout_gravity="center"/>
        <ImageView
            android:layout_marginTop="20dp"
            android:id="@+id/school_logol"
            android:layout_width="200dp"
            android:layout_height="200dp"
            android:layout_gravity="center"/>

        <Button
            android:id="@+id/sure_btn"
            android:layout_marginTop="20dp"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:background="@drawable/btn_signup_selector"
            android:text="确认选择"
            android:visibility="invisible"/>

    </LinearLayout>




</RelativeLayout>
